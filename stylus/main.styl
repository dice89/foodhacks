body
  background #0e1021
  color white
  margin 0
  overflow-x hidden


// Generelle Typographie
  
html
  font-family 'TWS Savory', Helvetica-Neue, sans-serif
  font-weight 200

body::-webkit-scrollbar
  width 35px
  background none

body::-webkit-scrollbar-track
  background none
body::-webkit-scrollbar-thumb
  width 35px
  background-image url("img/cheese.svg")
  background-repeat no-repeat
  background-size 30px



p, h3, h4, h5
  font-family 'TWS Savory', Helvetica-Neue, sans-serif
  font-weight 300
  
h1
  font-size 100px

h2
  font-size calc(50px + 3vw)
  letter-spacing -1px
  line-height 110%
  margin 0
  padding 0
  +below(900px)
    font-size calc(35px + 3vw)

ul, li
  padding 0
  margin 0
  
h3
  color rgba(255,255,255,.85)
  font-size 19px
  margin 5px 0

h1, h2
  font-family 'Quicksand', Helvetica-Neue, sans-serif
  font-weight 100

p
  color rgba(255,255,255,.5)
  font 14px 'TWS Savory', Arial, sans-serif
  font-weight 300
  line-height 170%
  a
    font-size 15

a
  font-weight light
  color white
  text-decoration None
  transition all 0.3s ease
  &:hover
    color gray
    text-decoration None
  &:active
    color white
    text-decoration None
  &:visited
    color white
    
// Landingpage

.headlinespacing
  margin-bottom 50px

hr
  color rgba(255,255,255,.05)
  background-color rgba(255,255,255,.05)
  width 100%
  margin 10px 20px
  height 1px
  border 0
  +below(800px)
    display none

.wrapper
  max-width 1200px
  margin 0 auto
.landing
  background url("img/website_hero.svg")
  background-repeat no-repeat
  background-size cover
  margin auto
  width 100%
  height 100vh
  img
    width 90%

.small_header
  width 100%
  margin auto
  margin-top 10px
  @media screen and (min-width: 500px)
    display none
  @media screen and (max-width: 500px)
    display block
  img
    display block
    margin auto
    width 80%

#menue_container
  width 100%
  margin auto
  float right
  ul
    font-size 13.75px
    margin-top 22px
    text-transform uppercase
    letter-spacing 2px
    width 70%
    float left
    @media screen and (max-width: 1000px)
      width 70%
    li
      margin-right 35px
      float Left
      vertical-align top

  .image_container
    float left
    @media screen and (max-width: 1000px)
      width 20%
    width 12%
    margin auto
    img
      height 50px
      margin-left 15px
  .apply_container
    float right
    width 15%
    vertical-align text-top
    @media screen and (max-width: 1000px)
      display None
    ul
      li
        background rgba(224,62,59,1)
        padding 12px 16px 9px 16px
        margin-top -9px
        border-radius 18px
        transition 0.2s all
        &:hover, &:focus
          cursor pointer
          background rgba(224,62,59,.5)



header
  position fixed
  top -150px
  height 65px
  width 100%
  padding-top 10px
  font-size 24px
  background rgba(0,0,0,0.65)
  transition all 0.7s ease
  -webkit-transition all 0.7s ease
  @media screen and (max-width: 900px)
    display None


header.sticky
  top 0px
  text-align left
  padding-left 20px
  transition all 0.7s ease




.prices_container
  width 100%
  display block
  .price
    width 30%
    margin auto
    display block
    p
      text-align center
      color white
      font-size 20px

.challenge_price
  min-width 26%
  margin-top 20px

.teaserlanding
  margin-top 150px
  width 100%
  img
    margin auto
    display block
    width 50%
    @media screen and (max-width: 700px)
      width 80%
  .teaserinfo
    margin-top 25px
    width 50%
    margin auto
    display block
    .teaserinfodetails
      display block
      margin auto
      margin-top 30px
      ul
        margin auto
        width 90%
        display table
        font-size 25px
        @media screen and (max-width: 1100px)
          font-size 20px
        padding-left 0
        label
          display table-cell
          padding-right 20px
        span
          display table-cell
      li
        display table-row

.leftbg
  background-image url('img/br_apples.svg')
  background-repeat: no-repeat
  background-size: contain
  height 80%
  width 50%
  @media screen and (max-width: 1100px)
    width 100%
    height 50%
    margin auto
  @media screen and (max-width: 700px)
    height 35%

.rightbg
  @media screen and (max-width: 1100px)
    display none
  background-image url('img/br_bananas.svg')
  background-repeat: no-repeat
  background-size: contain
  height 80%
  width 50%

.container
  display flex
  flex-flow row wrap
  margin 0 auto
  align-items stretch
  justify-content space-between



.headline_box
  padding 0px 30px 30px 0
  box-sizing border-box

.item_overview
  flex 3 1200px

.item
  flex 1 300px
  max-width calc(33% - 5px)
  padding 35px
  // background rgba(0,0,0,0.3)
  display flex
  flex-direction column
  flex-wrap wrap
  text-align center
  align-items center
  box-sizing border-box
  min-height 300px
  +below(1000px)
    max-width calc(50% - 5px)
  +below(770px)
    max-width 100%
  img
    padding 20px
    width 75px
    height 75px

// .item2
//   flex 1 360px
//   flex-grow 1
//   box-sizing border-box
//   padding 25px
//   max-width calc(80% - 5px)
//   background rgba(0,0,0,0.3)

  justify-content center
  align-items center
  min-height 300px
  +below(1000px)
    max-width calc(50% - 5px)
  +below(770px)
    max-width 100%
  

.item_overview, .item, .item-jury
  margin-bottom 15px
  box-sizing border-box
  +below(1000px)
    margin-bottom 10px

.item_image
  height 150px
  display flex
  justify-content center
  align-items center
  
.item-jury
  flex 1 270px
  display flex
  flex-direction column
  flex-wrap wrap
  text-align center
  align-items center
  box-sizing border-box
  padding 20px
  img
    margin-bottom 30px
    background black
    width 75px
    height 75px
    padding 10px
    border-radius 50%
  max-width calc(33% - 5px)
  +below(1000px)
    max-width calc(50% - 5px)
  +below(770px)
    max-width 100%
 
 .item-faq
   flex 1 270px
   display flex
   flex-direction column
   flex-wrap wrap
   text-align center
   align-items center
   box-sizing border-box
   padding 20px
   img
     margin-bottom 30px
     width 75px
     height 75px
   max-width calc(33% - 5px)
   +below(1000px)
     max-width calc(50% - 5px)
   +below(770px)
     max-width 100%
    

.contentcontainer
  margin-top 50px
  padding 0 50px
  +below(1000px)
    padding 0 20px

#rainmaking
  padding-left 30px
  +below(500px)
    padding-left 0
  h2
    display inline-block
    padding 5px 25px
    background rgba(0,0,0,.65)
    
#loft_pic
  background-image url("img/loft_pic.jpg")
  background-repeat no-repeat
  z-index: -2;
  background-size cover
  background-position bottom
  height 425px
  margin-top -240px
  width 100%
  +below(500px)
    width calc(100% + 40px)
    margin-left -20px
    margin-top -380px

#loft_description
  position absolute
  transform translate(0,-80px)
  right calc(50% - 520px)
  +below(1200px)
    right 50px
  +below(485px)
    position relative
    right 0
  div
    display flex
    align-items center
    justify-content center
    flex-direction column
    width 350px
    padding 25px
    box-sizing border-box
    background rgba(0,0,0,.65)

#mapbox
   z-index -1
   height 425px
   width 100%
   font-size 12px
   +below(500px)
     width calc(100% + 40px)
     margin-left -20px
     margin-top -380px
  
.banner
  transition 0.2s all
  &:hover, &:focus
    opacity 0.8
    cursor pointer

.footers
  font-family 'TWS Savory'
  margin 50px 0 20px

.footer
  text-align center
  line-height 150%
  width 20%
  font-size 15px
  margin 5px auto
  font-size 12px
  span
    width 100%
    display block
    margin auto
    text-align center
  a:visited
    color gray
  a:hover
    color gray
  a:link
    color white
  a:active
    color white

#footericons
  display flex
  flex-direction row
  justify-content center
  align-items center
  img
    transition 0.2s ease-in
    padding 30px
    width 40px
    height 40px
    &:hover, &:focus
      opacity 0.5
      cursor pointer

.typeform_box
  width 100%
  margin auto
.infochart
  @media screen and (max-width: 1100px)
    display none
  margin-top -550px
  padding-left 80px
  img
    width 100%
    max-width 1000px