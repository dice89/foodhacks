body
  font 13px 'Quicksand', Arial, sans-serif
  background #0e1021
  color white
  h1
    font-size 100px
    min-width 200px

.landing
  margin auto
  margin-bottom 100px
  margin-top 20px
  width 80%
  .dates
    width 130%
  h1
    font-size 115px
    line-height 40%
    @media screen and (max-width: 1100px)
      font-size 80px
    @media screen and (max-width: 700px)
      font-size 60px
  img
    @media screen and (max-width: 700px)
      width 80%

.leftbg
  background-image url('img/br_apples.svg')
  background-repeat: no-repeat
  background-size: contain
  height 80%
  width 50%
  @media screen and (max-width: 1100px)
    width 100%
    height 50%
    margin auto
  @media screen and (max-width: 700px)
    height 35%

.rightbg
  @media screen and (max-width: 1100px)
    display none
  background-image url('img/br_bananas.svg')
  background-repeat: no-repeat
  background-size: contain
  height 80%
  width 50%

.container
  display flex
  flex-direction row
  flex-wrap wrap
  margin auto
.item
  flex 1 300px



.contentcontainer
  margin-left auto
  margin-right auto
  margin-top 50px
  padding 0px 50px 0px 50px
  h2
    margin-top -70px
    font-size 75px
    letter-spacing 2px
    line-height 120%
    @media screen and (max-width: 700px)
      font-size 60px
      margin-top -50px
    @media screen and (max-width: 1100px)
      font-size 65px

.afterfirst
  margin-top 200px

.content_box
    background #05060d
    padding 20px
    margin-right 20px
    margin-top 20px
    font 15px 'TWS Savory Light', Arial, sans-serif
    h3
      color white
      font-size 22px
      letter-spacing -0.75px
    p
      color gray
      line-height 130%
.typeform_box
  width 100%
  margin auto
.infochart
  @media screen and (max-width: 1100px)
    display none
  margin-top -550px
  padding-left 80px
  img
    width 100%
    max-width 1000px